# Talos & Cluster
k8s_context           = "seldon"
talos_version         = "v1.11.5"
cluster_name          = "seldon"
cluster_public_ip     = ""
talos_controlplane_ip = ""
talos_hostname        = "talos-cp1"

# Cloudflare (DNS & DDNS)
cloudflare_api_token = ""  # Scoped token with DNS edit permissions
cloudflare_zone_id   = ""

# TLS
letsencrypt_email = ""

# Container Registry
github_token = ""

# Authentication (Ory Stack)
google_client_id       = ""
google_client_secret   = ""
cookie_secret          = ""
auth_postgres_password = ""
hydra_system_secret    = ""  # 32+ chars
hydra_cookie_secret    = ""  # 32+ chars
hydra_salt             = ""  # 32+ chars
kratos_secret          = ""  # 32+ chars
kratos_identities = [
  {
    email      = "your@email.uk"
    first_name = "Your"
    last_name  = "Name"
  },
]

# Storage
nfs = {
  server         = ""
  tv_path        = "/path/to/tv"
  movies_path    = "/path/to/movies"
  books_path     = "/path/to/ebooks"
  downloads_path = "/path/to/downloads"
  docs_path      = "/path/to/docs"
  puid           = 1000
  pgid           = 1000
}

# Applications
paperless_secret_key = ""
plex_claim_token     = ""

# VPN (Mullvad)
# Get WireGuard config from: https://mullvad.net/en/account/wireguard-config
mullvad = {
  wireguard_private_key = ""              # Your WireGuard private key
  wireguard_addresses   = "10.x.x.x/32"   # Your assigned address
  server_countries      = "Sweden"        # Optional: preferred server locations
}

# Checkly Monitoring
checkly_api_key    = ""  # From https://app.checklyhq.com/settings/account/api-keys
checkly_account_id = ""  # From https://app.checklyhq.com/settings/account/general

# OpenClaw AI Assistant
anthropic_api_key      = ""  # From https://console.anthropic.com/settings/keys
gemini_api_key         = ""  # From https://aistudio.google.com/apikey
telegram_bot_token     = ""  # From @BotFather on Telegram
openclaw_gateway_token = ""  # Generate with: openssl rand -hex 32
openclaw_model         = "google/gemini-3-flash-preview"  # Or: anthropic/claude-sonnet-4-5
openclaw_github_token  = ""

google_clive_client_id     = ""
google_clive_client_secret = ""
google_clive_refresh_token = ""

# 1Password Connect
# Create server at: 1Password → Settings → Integrations → Secrets Automation
onepassword_credentials = <<-EOF
{paste 1password-credentials.json contents}
EOF
onepassword_token = ""  # Access token from the same setup
